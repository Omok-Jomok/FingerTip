<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShopCoupangActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:src="@drawable/coupang_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.101"></ImageView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_margin="10dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_search"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/button_purple"
                android:elevation="20dp"
                android:gravity="left"
                android:paddingLeft="20dp"
                android:paddingTop="30dp"
                android:paddingRight="20dp"
                android:onClick="goSearchCoupangActivity"
                android:text="상품 검색"
                android:textColor="@color/white"
                android:textSize="15pt"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_recommend_product"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/button_purple"
                android:gravity="left"
                android:paddingLeft="20dp"
                android:paddingTop="30dp"
                android:paddingRight="20dp"
                android:text="추천 상품"
                android:textColor="@color/white"
                android:textSize="15pt"
                android:textStyle="bold" />

            <Button
                android:id="@+id/naver_shop"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/button_purple"
                android:gravity="left"
                android:paddingLeft="20dp"
                android:paddingTop="30dp"
                android:text="자주 산 상품"
                android:textColor="@color/white"
                android:textSize="15pt"
                android:textStyle="bold" />

            <Button
                android:id="@+id/Gmarket"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/button_purple"
                android:gravity="left"
                android:paddingLeft="20dp"
                android:paddingTop="30dp"
                android:text="특가 상품"
                android:textColor="@color/white"
                android:textSize="15pt"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>