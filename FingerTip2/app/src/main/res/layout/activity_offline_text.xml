<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OfflineTextActivity">

    <TextView
        android:id="@+id/ocr_tv"
        android:layout_margin="10dp"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:padding="10dp"
        android:textSize="15sp"
        android:text="안녕하세요 , 박희수 입니다."
        android:textStyle="bold"
        android:background="@drawable/text_border"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">
    </TextView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:weightSum="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ocr_tv"
        app:layout_constraintVertical_bias="0.107">

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="makeBig"
            android:background="@drawable/button_purple"
            android:text="글자 사이즈\n크게"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold">

        </Button>

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="makeSmall"
            android:background="@drawable/button_purple"
            android:text="글자 사이즈\n작게"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold">

        </Button>

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="listenText"
            android:background="@drawable/button_purple"
            android:text="글자 소리로\n듣기"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold">

        </Button>

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="copyText"
            android:background="@drawable/button_purple"
            android:text="글자\n복사하기"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold">

        </Button>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:onClick="goOfflineMainActivity"
        android:background="@drawable/button_purple"
        android:text="다른 사진 보러가기"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="16dp">

    </Button>
</androidx.constraintlayout.widget.ConstraintLayout>